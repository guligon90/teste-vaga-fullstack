{
    "name": "fscc-kronoos",
    "version": "0.0.1",
    "description": "Technical assessment for the position of fullstack software engineer at Kronoos",
    "repository": "https://github.com/kronoos-dev/teste-vaga-fullstack",
    "author": {
        "name": "Guilherme Gon√ßalves <guligon90>",
        "email": "guligon90@gmail.com",
        "url": "https://github.com/guligon90"
    },
    "license": "ISC",
    "main": "build/index.js",
    "scripts": {
        "build": "tsc --project tsconfig.json",
        "build:prod": "rimraf build && tsc --project tsconfig.production.json",
        "build:validate": "tsc --project tsconfig.json --noEmit",
        "format": "prettier --write --config .prettierrc.cjs '**/*.{cjs,js,ts,jsx,tsx,json,css,scss,md}'",
        "lint": "eslint \"{src,test}/**/*.{js,ts}\"",
        "lint:fix": "eslint \"{src,test}/**/*.{js,ts}\" --fix",
        "prebuild": "rimraf build",
        "start:dev": "ts-node-dev ./src/index.ts",
        "start:prod": "node ./build/src/index.js",
        "test": "ts-node test",
        "test:watch": "ts-node test --watch",
        "test:watchall": "ts-node test --watchAll",
        "test:cov": "ts-node test --coverage",
        "test:ci": "ts-node test --coverage",
        "test:debug": "node --inspect-brk -r ts-node/register",
        "update:check": "ncu",
        "update:apply": "ncu -u",
        "update:install": "rimraf yarn.lock && rimraf node_modules && yarn install",
        "validate": "yarn build:validate && yarn format && yarn lint:fix"
    },
    "keywords": [
        "validation",
        "csv",
        "parser",
        "nodejs",
        "typescript"
    ],
    "dependencies": {
        "@types/config": "^3.3.4",
        "@types/module-alias": "^2.0.4",
        "async": "^3.2.5",
        "config": "^3.3.12",
        "libphonenumber-js": "^1.11.4",
        "microdiff": "^1.4.0",
        "module-alias": "^2.2.3",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.5.3",
        "uuid": "^10.0.0",
        "winston": "^3.13.1"
    },
    "devDependencies": {
        "@eslint/compat": "^1.1.0",
        "@types/eslint": "^8.56.10",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.14.10",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^7.16.0",
        "@typescript-eslint/parser": "^7.16.0",
        "eslint": "^9.6.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "5.1.3",
        "jest": "^29.7.0",
        "jest-cli": "^29.7.0",
        "npm-check-updates": "^16.14.20",
        "prettier": "^3.3.2",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.2.2",
        "ts-node-dev": "^2.0.0"
    }
}
